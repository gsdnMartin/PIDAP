<% layout('layouts/template') %>
<!-- Page Wrapper -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
                    
                </div>     

                <div class="row">
                    <div class="row">

                        <div class="col-xl-6 col-md-6 mb-4">
                            <div class="card text-center shadow h-100 py-2">
                                <div class="card-body ">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                                Ventas Internas (Historico)</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">$<%= historicoVI.rows[0].sum %></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-6 col-md-6 mb-4">
                            <div class="card text-center shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col-auto">
                                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                        </div>
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                                Comercio Exterior (Historico)</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">$<%= historicoCE.rows[0].sum %></div>
                                        </div> 
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>

                <div class="row">

                    <!-- Area Chart -->
                    <div class="col-xl-8 col-lg-7">

                        <!-- Project Card Example -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-success">Distribuidoras por Estado</h6>
                            </div>
                            <div class="card-body">
                                <% if(distribuidora_estado[0]){ %>
                                    <h4 class="small font-weight-bold"><%= distribuidora_estado[0].nombre_estado %><span class="float-right"><%= distribuidora_estado[0].cantidad %></span>
                                    </h4>
                                    <div class="progress mb-4">
                                        <div class="progress-bar bg-danger" role="progressbar" style="width: <%= distribuidora_estado[0].cantidad/distribuidora_estado[0].cantidad*100 %>%" 
                                            aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                <%} %>   
                                <% if(distribuidora_estado[1]){ %>
                                    <h4 class="small font-weight-bold"><%= distribuidora_estado[1].nombre_estado %><span class="float-right"><%= distribuidora_estado[1].cantidad %></span>
                                    </h4>
                                    <div class="progress mb-4">
                                        <div class="progress-bar bg-danger" role="progressbar" style="width: <%= distribuidora_estado[1].cantidad/distribuidora_estado[0].cantidad*100 %>%" 
                                            aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                <%} %>              
                                <% if(distribuidora_estado[2]){ %>
                                    <h4 class="small font-weight-bold"><%= distribuidora_estado[2].nombre_estado %><span class="float-right"><%= distribuidora_estado[2].cantidad %></span>
                                    </h4>
                                    <div class="progress mb-4">
                                        <div class="progress-bar bg-danger" role="progressbar" style="width: <%= distribuidora_estado[2].cantidad/distribuidora_estado[0].cantidad*100 %>%" 
                                            aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                <%} %>  
                                <% if(distribuidora_estado[3]){ %>
                                    <h4 class="small font-weight-bold"><%= distribuidora_estado[3].nombre_estado %><span class="float-right"><%= distribuidora_estado[3].cantidad %></span>
                                    </h4>
                                    <div class="progress mb-4">
                                        <div class="progress-bar bg-danger" role="progressbar" style="width: <%= distribuidora_estado[3].cantidad/distribuidora_estado[0].cantidad*100 %>%" 
                                            aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                <%} %>  
                                <% if(distribuidora_estado[4]){ %>
                                    <h4 class="small font-weight-bold"><%= distribuidora_estado[4].nombre_estado %><span class="float-right"><%= distribuidora_estado[4].cantidad %></span>
                                    </h4>
                                    <div class="progress mb-4">
                                        <div class="progress-bar bg-danger" role="progressbar" style="width: <%= distribuidora_estado[4].cantidad/distribuidora_estado[0].cantidad*100 %>%" 
                                            aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                <%} %>     
                                <% if(distribuidora_estado[5]){ %>
                                    <h4 class="small font-weight-bold"><%= distribuidora_estado[5].nombre_estado %><span class="float-right"><%= distribuidora_estado[5].cantidad %></span>
                                    </h4>
                                    <div class="progress mb-4">
                                        <div class="progress-bar bg-danger" role="progressbar" style="width: <%= distribuidora_estado[5].cantidad/distribuidora_estado[0].cantidad*100 %>%" 
                                            aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                <%} %>            
                            </div>
                        </div>

                        <!-- Color System -->
                    
                    </div>

                    

                    <!-- Pie Chart -->
                    <div class="col-xl-4 col-lg-5">
                        <div class="card shadow mb-4">
                            <!-- Card Header - Dropdown -->
                            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-success">Pozos por estado</h6>
                            </div>
                            <!-- Card Body -->
                            <div class="card-body">
                                <div class="chart-pie pt-4 pb-2">
                                    <canvas id="myPieChart"></canvas>
                                </div>
                                <div class="mt-4 text-center small">
                                    <span class="mr-2">
                                        <i class="fas fa-circle text-success"></i> <%= pozo_estado[0].nombre_estado %>
                                    </span>
                                    <span class="mr-2">
                                        <i class="fas fa-circle text-danger"></i> <%= pozo_estado[1].nombre_estado %>
                                    </span>
                                    <span class="mr-2">
                                        <i class="fas fa-circle text-dark"></i> <%= pozo_estado[2].nombre_estado %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Content Row -->
                <div class="row">

                    <!-- Content Column -->
                    <div class="col-xl-12 col-lg-6">
                        <div class="card shadow mb-4">
                            <!-- Card Header - Dropdown -->
                            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-success">Estadisticas Produccion</h6>
                            </div>
                            <!-- Card Body -->
                            <div class="card-body">
                                <div class="chart-area">
                                    <canvas id="myAreaChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; PIDAP 2023</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Listo para salir?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">Selecciona "Cerrar Sesion" si tu estas listo para cerrar tu sesion</div>
            <div class="modal-footer">
                <button class="btn btn-success" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-success" href="/">Cerrar Sesion</a>
            </div>
        </div>
    </div>
